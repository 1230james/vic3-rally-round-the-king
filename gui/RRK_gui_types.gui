                    layoutpolicy_vertical = preferred
                    spacing = 5
                    
                    hbox = {
                        layoutpolicy_horizontal = expanding
                        spacing = 10
                        datacontext = "[ReformGovernment.GetPredictedLegitimacyLevel]"
                        tooltip = "LEGITIMACY_LEVEL_PREDICTED_TOOLTIP"
                            
